<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PulsNet</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="nav" style="display:flex;align-items:center;gap:16px;padding:12px 16px;background:#0c1020;border-bottom:1px solid #1a2140">
            <a href="/Dashboard" style="color:#c6d2ff;text-decoration:none;font-weight:700">PulsNet</a>
            <a href="/Dashboard" style="color:#aeb9ff;text-decoration:none">Dashboard</a>
            <a href="/Admin/Devices" style="color:#aeb9ff;text-decoration:none">Devices</a>
            <a href="/Mibs" style="color:#aeb9ff;text-decoration:none">MIBs</a>
            <a href="/Monitoring/Thresholds" style="color:#aeb9ff;text-decoration:none">Monitoring</a>
            <a href="/Tenants" style="color:#aeb9ff;text-decoration:none">Tenants</a>
            <a href="/Users" style="color:#aeb9ff;text-decoration:none">Users</a>
            <a href="/Admin/Settings" style="color:#aeb9ff;text-decoration:none">Settings</a>
            <span style="flex:1"></span>
            <form method="post" action="/Account/Logout">@Html.AntiForgeryToken()<button type="submit">Logout</button></form>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
