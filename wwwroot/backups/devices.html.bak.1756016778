<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Devices</title>
  <link rel="stylesheet" href="/styles.css">
  <script defer src="/devices.js"></script>
  <script defer src="/app.js"></script>
</head>
<body>
<div class="container">
<header class="topbar">
  <div class="brand">PulsNet</div>
  <nav>
    <a href="/index.html">Dashboard</a>
    <a href="/admin.html">Admin</a>
    <a href="/devices.html">Devices</a>
    <a href="/mibs.html">MIBs</a>
    <a href="/sites.html">Sites</a>
    <a href="/users.html">Users</a>
    <a href="/tenants.html">Tenants</a>
    <a href="/management.html">Management</a>
    <span class="spacer"></span>
    <button id="logoutBtn">Logout</button>
  </nav>
</header>

<main class="grid two">
<div class="card">
  <div class="row">
    <label>Tenant
      <select id="tenantSel"></select>
    </label>
    <button id="applyTenant" class="btn">Apply</button>
  </div>
</div>

  <!-- Add Device Form -->
  <section class="card">
    <h2>Add Device</h2>
    <label>Client Name <input id="client"></label>
    <label>Circuit Number <input id="circuit"></label>
    <label>IP Address <input id="ip"></label>
    <label>SNMP Community <input id="comm" value="public"></label>
    <label>Max Link (Mbps) <input id="max" type="number"></label>
    <label>Interface Index <input id="ifx" type="number" min="1" placeholder="optional"></label>
    <button id="add" class="btn">Add</button>
  </section>

  <!-- Device List -->
  <section class="card">
    <h2>Devices</h2>
    <div id="list"></div>
  </section>
</main>
</div>
</body>
</html>
