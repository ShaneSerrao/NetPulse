@model PulsNet.Web.Models.Device
@{
    ViewData["Title"] = "Edit Device";
    var tenants = (IEnumerable<PulsNet.Web.Models.Tenant>)ViewBag.Tenants;
}
<div style="padding:24px;max-width:720px;margin:auto">
    <h1>Edit Device</h1>
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <div><label>Client Name</label><input name="ClientName" value="@Model.ClientName" style="width:100%" /></div>
        <div><label>Circuit Number</label><input name="CircuitNumber" value="@Model.CircuitNumber" style="width:100%" /></div>
        <div><label>Tenant</label>
            <select name="TenantId" style="width:100%">
                <option value="">-- None --</option>
                @foreach (var t in tenants){
                    if (Model.TenantId == t.Id){
                        <option value="@t.Id" selected="selected">@t.Name</option>
                    } else {
                        <option value="@t.Id">@t.Name</option>
                    }
                }
            </select>
        </div>
        <div><label>IP Address</label><input name="IpAddress" value="@Model.IpAddress" style="width:100%" /></div>
        <div style="display:flex;gap:8px">
            <div style="flex:1"><label>SNMP Community</label><input name="SnmpCommunity" value="@Model.SnmpCommunity" style="width:100%" /></div>
            <div style="width:120px"><label>SNMP Port</label><input name="SnmpPort" value="@Model.SnmpPort" type="number" style="width:100%" /></div>
        </div>
        <div style="display:flex;gap:8px">
            <div style="flex:1"><label>Max Link (Mbps)</label><input name="MaxLinkMbps" value="@Model.MaxLinkMbps" type="number" style="width:100%" /></div>
            <div style="flex:1"><label>Line Speed Label</label><input name="LineSpeedLabel" value="@Model.LineSpeedLabel" style="width:100%" placeholder="e.g., 100/50 Mbps" /></div>
        </div>
        <div style="display:flex;gap:8px">
            <div style="flex:1"><label>Latitude</label><input name="Latitude" value="@Model.Latitude" type="number" step="any" style="width:100%" /></div>
            <div style="flex:1"><label>Longitude</label><input name="Longitude" value="@Model.Longitude" type="number" step="any" style="width:100%" /></div>
            <div style="width:150px"><label>Card Size</label>
                <select name="CardSize" style="width:100%">
                    @{
                        var sizes = new[]{"sm","md","lg"};
                        foreach (var s in sizes){
                            if (Model.CardSize == s){
                                <option value="@s" selected="selected">@((s=="sm")?"Small":(s=="md")?"Medium":"Large")</option>
                            } else {
                                <option value="@s">@((s=="sm")?"Small":(s=="md")?"Medium":"Large")</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div style="margin-top:12px">
            <button type="submit">Save</button>
        </div>
    </form>
</div>